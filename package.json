{
  "private": true,
  "workspaces": {
    "packages": [
      "game-pass-critic-infra",
      "game-pass-critic-sync",
      "game-pass-critic-ui"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "4.11.1",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "5.0.0",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "prettier": "2.2.1",
    "typescript": "4.1.3"
  },
  "scripts": {
    "lint": "eslint **/*.ts",
    "prettify": "prettier --write **/*.{ts,js,md,json,yml,yaml}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{js,md,json,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.tf": [
      "yarn tf-fmt"
    ]
  }
}
